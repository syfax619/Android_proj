<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/blanc"
              android:orientation="vertical"
              android:padding="20dp">

    <TextView
        android:id="@+id/titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:text="Scores"
        android:textColor="@color/bleu_fonce"
        android:textSize="20sp"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/niveau_1"
        style="@style/texte_scores"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/terminer_1"
        style="@style/texte_scores"/>

    <TextView
        android:id="@+id/temps_1"
        style="@style/texte_scores"/>

    <TextView
        android:id="@+id/niveau_2"
        style="@style/texte_scores"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/terminer_2"
        style="@style/texte_scores"/>

    <TextView
        android:id="@+id/temps_2"
        style="@style/texte_scores"/>

    <TextView
        android:id="@+id/niveau_3"
        style="@style/texte_scores"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/terminer_3"
        style="@style/texte_scores"/>

    <TextView
        android:id="@+id/temps_3"
        style="@style/texte_scores"/>

</LinearLayout>